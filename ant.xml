    <target name="compile" depends="clean" description="compile the source ">
        <!--<classfileset dir="lib"/>-->
        <mkdir dir="classes"/>
        <javac srcdir="src" destdir="classes">
            <!--<classpath>-->
                <!--<fileset dir="lib">-->
                    <!--<include name="**/*.jar"/>-->
                <!--</fileset>-->
            <!--</classpath>-->
            <!--<src path="config"/>-->
        </javac>
        <!--<copydir src="config" dest="classes"/>-->
